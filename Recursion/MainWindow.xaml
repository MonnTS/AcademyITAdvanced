<Window x:Class="Recursion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recursion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="RichTextBox" Height="200" Width="500" />
        <Button Content="Factorial" Click="Button_OnClick" Height="30" Width="100" Margin="0,0,300,-250"/>
        <Button Content="Fibonacci" Click="ButtonBase_OnClick" Height="30" Width="100" Margin="0,0,75,-250"/>
        <Button Content="an = 2a(n-1) +3a(n-2)+1" Click="ButtonSecond_OnClick" Height="30" Width="150" Margin="200,0,0,-250"/>
    </Grid>
</Window>
