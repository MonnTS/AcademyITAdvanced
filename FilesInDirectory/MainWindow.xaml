<Window x:Class="FilesInDirectory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesInDirectory"
        mc:Ignorable="d"
        Title="Check Files" Height="450" Width="750">
    <Grid>
        <ListBox x:Name="ListBox" Height="400" Width="500" Margin="-150, 0, 0, 0"/>
        <Button Click="Button_OnClick" Height="50" Width="100" Content="Get Files" Margin="500,250, 0, 0"/>
    </Grid>
</Window>
