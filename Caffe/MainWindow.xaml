<Window x:Class="Caffe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Add" Width="100" Height="30"
                Margin="0,100,550,0"
                Click="btnAdd_Click" />
        <Label Content="Burger Name" Width="100" Height="30"
               Margin="0,-350,550,0" />
        <TextBox x:Name="TxtName" Width="100" Height="30"
                 Margin="0,-100,550,0" />
        <Label Content="Burger Price" Width="100" Height="30"
               Margin="0,-250,550,0" />
        <TextBox x:Name="TxtPrice" Width="100" Height="30"
                 Margin="0,-200,550,0" />
        <Label Content="Burger Description" Width="110" Height="30"
               Margin="0,-150,550,0" />
        <TextBox x:Name="TxtDescription" Width="100" Height="30"
                 Margin="0,-300,550,0" />

        <DataGrid x:Name="Dgv" Width="500" Height="400" ItemsSource="{Binding}"
                  Margin="100,10,0,0" />

        <Button Content="Read" Width="100" Height="30"
                Margin="0,0,550,0"
                Click="btnRead_Click" />
    </Grid>
</Window>